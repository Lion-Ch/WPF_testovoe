<Application x:Class="PL.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewCategory="clr-namespace:PL.Views.CategoryPage"
             xmlns:viewProduct="clr-namespace:PL.Views.ProductPage"
             xmlns:viewModel="clr-namespace:PL.ViewModels"
             xmlns:local="clr-namespace:PL"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type viewModel:CategoriesViewModel}">
            <viewCategory:CategoryView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:ProductsViewModel}">
            <viewProduct:ProductView />
        </DataTemplate>
    </Application.Resources>
</Application>
