<Application x:Class="WPF_testovoe.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WPF_testovoe"
             xmlns:vm="clr-namespace:WPF_testovoe.ViewModels"
             xmlns:v="clr-namespace:WPF_testovoe.Views.CategoryPage"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type vm:CategoriesViewModel}">
            <v:CategoryView/>
        </DataTemplate>
        
        <SolidColorBrush x:Key="Gallery" Color="#fff"></SolidColorBrush>
        <SolidColorBrush x:Key="Geyser" Color="#dce1e6"></SolidColorBrush>
        <SolidColorBrush x:Key="Blue Yonder" Color="#4a76a8"></SolidColorBrush>
        
        <!--Style Controls-->
        <Style x:Key="MenuButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource Geyser}"/>
            <Setter Property="Foreground" Value="{StaticResource Blue Yonder}"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
        
        
    </Application.Resources>
</Application>
